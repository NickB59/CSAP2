import java.io.File;
import java.io.IOException;
import java.util.Scanner;
import static java.lang.System.*;

public class Maze
{
   private int[][] maze;
   private int [][] maze2;
   private int solved;

	public Maze()
	{
	   maze = new int[0][0];

	}

	public Maze(int size, String line)
	{
		solved = 0;
		Scanner scan = new Scanner(line);
		maze = new int[size][size];
		for(int i=0; i<size; i++){
			for(int j=0;j<size;j++){
				maze[i][j]=scan.nextInt();
			}
		}
		maze2 = new int[size][size];
		for(int i=0; i<size; i++){
			for(int j=0;j<size;j++){
				maze2[i][j]=maze[i][j];
			}
		}


	}

	public boolean hasExitPath(int r, int c)
	{
		if(r>=0&&r<maze2.length&&c>=0&&c<maze2.length&&maze2[r][c]==1){
			maze2[r][c] = 2;
			if(c>=maze2.length-1){
				solved = 1;
				return true;
			}
			else{
				hasExitPath(r-1,c); //up
				hasExitPath(r+1,c); //down
				hasExitPath(r,c-1); //left
				hasExitPath(r,c+1); //right
			}
		}

		return false;
	}

	public String toString()
	{
		String output= "";

		for(int i=0; i<maze.length; i++){
			for(int j = 0; j<maze.length; j++){
				output = output + maze[i][j];
			}
			output = output + "\n";
		}
		if(solved==1)
			output = output + "exit found\n";
		else if(solved==0)
			output = output + "exit not found\n";
		
		return output;
	}
}